include ../partials/header

.container  
  header.jumbotron
    .container
      h1 Welcome to YelpCamp!
      p.lead View our hand-picked campgrounds from all over the world
      p: a.btn.btn-primary.btn-large(href='/campgrounds/new') Add New Campground
      
  .row
    each campground in campgrounds
      .col-md-4.col-sm-6
        .card
          img.card-img-top(src=campground.image)
          .card-body.d-flex.justify-content-between.flex-wrap
            h4.card-title= campground.name
            .lead.align-right Â£#{campground.price} / night
          .card-footer
            a.btn.btn-primary(href='/campgrounds/'+campground._id) More Info
        
include ../partials/footer
