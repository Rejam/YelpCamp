include ../partials/header

.container
  .row
    .col-md-8.m-auto
      h1.display-1= campground.name
      form.mt-5(action='/campgrounds/'+campground._id+'/comments/'+comment._id+'?_method=PUT' method='POST')
        .form-group
          label(for='comment') Edit your comment
          input.form-control#comment(type='text' name='text' value=comment.text placeholder='comment')
        .form-group
          button.form-control.btn.btn-lg.btn-primary Submit!
        .form-group
          a.form-control.btn.btn-link(href='/campgrounds/'+campground._id) Go Back

include ../partials/footer

